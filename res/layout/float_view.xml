<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:alpha="1"
    android:orientation="horizontal" >
    <ImageView
        android:id="@+id/menu_imageview"
        android:layout_width="@dimen/menu_size"
        android:layout_height="@dimen/menu_size"
        android:layout_marginLeft="@dimen/function0_margin"
        android:layout_marginRight="@dimen/function0_margin"
        android:src="@drawable/float_view" />

    <ImageView
        android:id="@+id/gift_imageview"
        android:layout_width="@dimen/menu_size"
        android:layout_height="@dimen/menu_size"
        android:layout_marginLeft="@dimen/function0_margin"
        android:layout_marginRight="@dimen/function0_margin"
        android:src="@drawable/gift_view"
        android:visibility="gone"/>
    
    <ImageView
        android:id="@+id/strategy_imageview"
        android:layout_width="@dimen/menu_size"
        android:layout_height="@dimen/menu_size"
        android:layout_marginLeft="@dimen/function0_margin"
        android:layout_marginRight="@dimen/function0_margin"
        android:src="@drawable/strategy_view"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/speedup_imageview"
        android:layout_width="@dimen/menu_size"
        android:layout_height="@dimen/menu_size"
        android:layout_marginLeft="@dimen/function0_margin"
        android:layout_marginRight="@dimen/function0_margin"
        android:src="@drawable/speedup_view"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/hide_imageview"
        android:layout_width="@dimen/menu_size"
        android:layout_height="@dimen/menu_size"
        android:layout_marginLeft="@dimen/function0_margin"
        android:layout_marginRight="@dimen/function0_margin"
        android:src="@drawable/hide_view"
        android:visibility="gone"/>

</LinearLayout>